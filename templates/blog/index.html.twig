{% extends 'base.html.twig' %}
{% block title %}
    Bienvenue sur mon blog !
{% endblock %}
{% block body %}
    {% if is_granted('ROLE_BLOG_ADMIN') %}
        <a href="/newAction">Nouveau billet</a>
    {% endif %}
    <section>
        <h2 class="text-center">Contenu [{{ page * 5 }} - {{ page * 5 + 5 }}]</h2>
        {% if page > 0 %}
            <a href="/?page={{ page - 1 }}">Pr√©cedent</a>
        {% endif %}
        {% if page < (page_count - 1)  %}
            <a href="/?page={{ page + 1 }}">Suivant</a>
        {% endif %}
        {% for post in posts %}
            {{ include('blog/post.html.twig') }}
        {% endfor %}
    </section>
    <section>
        <h2 class="text-center">Sur MySkyBlog</h2>
        {% for post in other_blog %}
            {{ include('blog/post.html.twig') }}
        {% endfor %}
    </section>
{% endblock %}
